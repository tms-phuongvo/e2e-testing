{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018", "DOM"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["codeceptjs", "node"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
